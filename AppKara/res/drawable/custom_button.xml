<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <gradient android:startColor="#b6cefe" android:centerColor="#d1e5fe" android:endColor="#ebdef8"  />

            <corners android:radius="5dp" />

            <stroke android:width="1.5dp" android:color="#ebf5ff" />

            <padding android:bottom="2dp" android:left="15dp" android:right="15dp" android:top="2dp" />
        </shape></item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="#e8d9f8" android:centerColor="#ddc6f4" android:endColor="#d7baf0"/>
            <corners android:radius="5dp" />

            <stroke android:width="2dp" android:color="#bf9fe8" />

            <padding android:bottom="4dp" android:left="15dp" android:right="15dp" android:top="2dp" />
        </shape>
      
    </item>

</selector>